# Environment variables for DockDash
# Copy this file to .env and customize as needed

# Port configuration
DOCKDASH_PORT=9999

# Host IP for container URL generation
# Set this to your server's LAN IP so container links work correctly
# If not set, auto-detection is used (may not work correctly in Docker)
HOST_IP=192.168.0.100

# Flask secret key - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-string-in-production

# Default admin credentials (used only on first run)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=dockdash

# Session configuration
SESSION_LIFETIME_HOURS=12
# Set to 1 if running behind HTTPS reverse proxy
SESSION_COOKIE_SECURE=0

# Auto-start background monitoring on container startup
AUTO_START_MONITORING=0
